class Solution {
    public boolean isPalindrome(int x) {
        if(x<0) return false;
        if(x==reverse(x)) return true;
        else return false;
        
    }
    private static int reverse(int x){
        int ans=0,rem=0;
        while(x!=0){
            rem=x%10;
            x=x/10;
            ans=ans*10+rem;
        }
        return ans;
    }
}
Optimal Solution:
class Solution {
    public boolean isPalindrome(int x) {
        if (x < 0 || (x % 10 == 0 && x != 0))
            return false;
        int reversedHalf = 0;
        // Reverse only half of the digits
        while (x > reversedHalf) {
            int rem = x % 10;
            reversedHalf = reversedHalf * 10 + rem;
            x /= 10;
        }
        // For even number of digits: x == reversedHalf
        // For odd number of digits: x == reversedHalf / 10 (middle digit ignored)
        return (x == reversedHalf || x == reversedHalf / 10);
    }
}
